<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a6"
    tools:context=".khachhang.datban.ThanhToanFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/custom_buttor"
       android:orientation="vertical"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"

           android:orientation="vertical"
          android:padding="35dp">

           <TextView
               android:id="@+id/tvHDMaNguoiDung"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Ma nguoi dung"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:layout_marginBottom="10dp"
               android:paddingLeft="5dp"/>

           <TextView
               android:id="@+id/tvHDTenNguoiDung"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="ten nguoi dung"
               android:layout_marginBottom="10dp"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:paddingLeft="5dp"/>

           <TextView
               android:id="@+id/tvHDSDTNguoiDung"
               android:layout_marginBottom="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="sdt nguoi dung"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:paddingLeft="5dp"/>

           <TextView
               android:id="@+id/tvHDNgayDat"
               android:layout_marginBottom="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="ngay thang dat"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:paddingLeft="5dp"/>

           <TextView
               android:id="@+id/tvHDThoiGianDat"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="thoi gian"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:paddingLeft="5dp"/>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rcl"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"

               >

               <TextView
                   android:id="@+id/tvHDSoLuongBanDat"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:hint="so luong ban dat"
                   android:layout_weight="1"
                   android:paddingLeft="5dp"
                   android:paddingTop="10dp"
                   android:paddingBottom="10dp"
                   />

               <TextView
                   android:id="@+id/tvHDTienDatBan"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:hint="thanh tien"
                   android:paddingLeft="5dp"
                   android:paddingTop="10dp"
                   android:paddingBottom="10dp"
                   />
           </LinearLayout>

           <Button
               android:id="@+id/button3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Thanh toÃ¡n"
               />
       </LinearLayout>
   </LinearLayout>
</FrameLayout>