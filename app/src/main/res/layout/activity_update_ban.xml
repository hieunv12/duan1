<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/a2"
    tools:context=".quanly.UpdateBanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_buttor"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvmaBan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"

            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgquanLyBan"

                android:layout_width="156dp"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imgcamera"
                android:layout_width="57dp"
                android:layout_height="48dp"
                android:layout_margin="50dp"
                app:srcCompat="@android:drawable/ic_menu_camera" />
        </LinearLayout>



        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rabdat"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="Đặt" />

            <RadioButton
                android:id="@+id/rabtrong"
                android:layout_width="106dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Trống" />

            <RadioButton
                android:id="@+id/rabdangXuLy"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="Đang xử lý" />
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/edchiTiet"

            android:layout_marginTop="20dp"
            app:errorEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColorHint="#EAE6E6"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:hint="Chi tiết" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn"
            android:layout_marginTop="150dp"
            android:onClick="LuuBan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu" />
    </LinearLayout>

</LinearLayout>